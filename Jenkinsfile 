pipeline {
    agent any
    stages {
        stage('Checkout Git') {
            steps {
                git branch: 'main', url: 'https://github.com/your-username/ng-beginner.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    // Verify files (debugging)
                    sh 'pwd'
                    sh 'ls -la'
                    
                    // Build Docker image
                    sh 'docker build -t vinayasuresh/ng-beginner:latest .'
                }
            }
        }
    }
}